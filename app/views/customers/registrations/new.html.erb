<div class="container">

     <h4 class="d-inline bg-light">新規会員登録</h4>
     <div class="row">
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= devise_error_messages! %>

     <div class="form-group">
      <%= f.label :名前 %><br>
      <%= f.label :（姓） %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
      <%= f.label :（名） %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
     </div>
     <div class="form-group">
      <%= f.label :フリガナ %><br>
      <%= f.label :（セイ） %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
      <%= f.label :（メイ） %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
     </div>
     <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>
     <div class="form-group">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
     </div>
     <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
     </div>
     <div class="form-group">
      <%= f.label :電話番号（ハイフンなし） %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email" %>
     </div>
     <div class="form-group">
      <%= f.label :パスワード（6文字以上） %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
     </div>
     <div class="form-group">
      <%= f.label :パスワード（確認用） %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
     </div>
     <div class="actions">
      <%= f.submit "新規登録",class: "btn btn-success" %>
     </div>
    <% end %>
</div>
  <h4 class="d-inline bg-light">既に登録済みの方</h4><br>
  <%= link_to "こちら", new_session_path(resource_name) %>
  <span> からログインしてください。</span>
  <p id="notice"><%= notice %></p>

</div>