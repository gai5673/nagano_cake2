<div class="container">
 <div class="row">
 <div class="col-offset-1">
  <div class="item-image">
   <%= attachment_image_tag(@item, :image, fallback: "no_image.jpg",size: "300x200" ) %>
  </div>
  </div>
 <div class="col-5">
  <div class="item">
   <h3><%= @item.name %></h3>
   <p><%= @item.introduction %></p>
   <h3 class="item-price">¥<%= (@item.price * 1.1).floor %><span>（税込）</span></h3>
   <%= form_with model: @cart_item, local: true do |f| %>
   <%= f.label :amount, "個数選択" %>
   <%= f.select :amount, *[1..10], placeholder: '個数選択', class:"quantity-select-form" %>
   <%= f.hidden_field :item_id, :value => @item.id %>
   <%= f.submit "カートに入れる", class: "btn btn-success" %>
   <% end %>
  </div>
 </div>
</div>