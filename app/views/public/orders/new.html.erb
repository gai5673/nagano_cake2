<div class="container">
 <h4 class="d-inline bg-light">注文情報入力</h4>
 <div class="row">
  <div class="col-xs-12">
  <%= form_with model: @order, method: :post, local: true do |f| %>
  <table class="table table-borderless">
  <tbody>
  <tr>
  <th>支払方法</th>
  <td>
  <div class="radio">
  <%= f.radio_button :payment, 0 %>
  <label class="payment-label"> クレジットカード</label>
  <%= f.radio_button :payment, 1 %>
  <label class="payment-label">銀行振込</label>
  </div>
  </td>
  </tr>
  <tr>
  <th>お届け先</th>
  <td>
  <div class="radio">
  <%= radio_button_tag(:selected_address, :radio1) %>
  <%= label_tag(:selected_address, "ご自身の住所") %>
  <p>〒<%= @customer.postal_code %><%= @customer.address %></p>
  <p><%= @customer.first_name %><%= @customer.last_name %></p>
  </div>
  <div class="radio">
  <%= radio_button_tag(:selected_address, :radio2) %>
  <%= label_tag(:selected_address, "新しいお届け先") %>
  <div class="field">
  <label class="postal-code-label">郵便番号(ハイフンなし)</label>
  <%= f.text_field :postal_code, autofocus: true, class:""%>
  </div>
  <div class="field">
  <label class="address-label">住所</label>
  <%= f.text_field :address, autofocus: true, class:"" %>
  </div>
  <div class="field">
  <label class="address-label">宛名</label>
  <%= f.text_field :name, autofocus: true, class:"" %>
  </div>
  </div>
  </td>
  </tr>
  </tbody>
  </table>
  <div class="offset-5">
  <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
  </div>
  <% end %>
  </div>
</div>
 </div>
</div>