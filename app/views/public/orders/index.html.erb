<div class="container">
 <h4 class="d-inline bg-light">注文履歴一覧</h4>
 <div class="row">
  <div class="col">
   <table class="table table-bordered">
   <thead>
   <tr class="table-head">
   <th>注文日</th>
   <th>配送先</th>
   <th>注文商品</th>
   <th>支払金額</th>
   <th>ステータス</th>
   <th>注文詳細</th>
   </tr>
   </thead>
   <tbody>
   <% @orders.each do |order| %>
   <tr>
   <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
   <td>
   <p>〒<%= order.postal_code %><%= order.address %></p>
   <p><%= order.name %></p>
   </td>
   <td>
   <% order.orders_details.each do |f| %>
   <p><%= f.item.name %></p>
   <% end %>
   </td>
   <td><%= order.amount_claimed %>円</td>
   <td></td>
   <td>
   <%= link_to "表示する", order, class: 'btn btn-primary' %>
   </td>
   </tr>
   <% end %>
   </tbody>
  </table>
 </div>
 </div>