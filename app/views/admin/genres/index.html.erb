<div class="container">
  <div class="row">
    <h4 class="d-inline bg-light">ジャンル追加・一覧</h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="offset-sm-1 col-sm-4">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>

        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="">
          <%= f.submit "新規登録", class: "btn btn-success mt-3 mx-auto" %>
        </div>
      <% end %>
    </div>
    </div>

    <div class="row offset-sm-1 col-sm-5">
      <table class="table table-hover text-center">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>