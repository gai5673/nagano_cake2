<div class="container">
  <div class="row">
   <h4 class="d-inline bg-light">注文履歴一覧</h4>
   </div>
  <div class="row">
   <table class="table table-hover text-center">
     <thead>
       <tr>
         <th>購入日時</th>
         <th>購入者</th>
         <th>注文個数</th>
         <th>注文ステータス</th>
       </tr>
     </thead>
     <tbody>
      <% @orders.each do |order| %>
       <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
        <td>
         <%= order.customer.first_name %>
         <%= order.customer.last_name %>
        </td>
        <td><%= order.order_details.sum(:quantity) %></td>
        <td></td>
        <td></td>
       </tr>
      <% end %>
      </tbody>
   </table>
  </div>
 <div class="container">
  <div class="row">
   <div class="col-md-4 offset-md-4 py-2  mt-5">
    <%= paginate @orders %>
   </div>
  </div>
 </div>
</div>